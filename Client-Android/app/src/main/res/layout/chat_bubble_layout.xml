<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView android:id="@+id/chatCardView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="@color/secondary"
        app:cardCornerRadius="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView android:id="@+id/chatBubbleProfilePicture"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"/>


    </androidx.cardview.widget.CardView>

<TextView android:id="@+id/chatBubbleName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/chatCardView"
        android:textColor="@android:color/darker_gray"
        android:text="@string/name_placeholder"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>